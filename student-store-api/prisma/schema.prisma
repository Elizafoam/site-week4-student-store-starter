generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id          Int           @id @default(autoincrement())
  name        String
  description String
  price       Float
  image_url   String
  category    String
  order_items order_items[]
}

model orders {
  order_id    Int           @id @default(autoincrement())
  customer_id Int           
  total_price Float
  status      String
  orderItems  order_items[]
  created_at  DateTime      @default(now())
}

model order_items {
  order_item_id         Int @id @default(autoincrement())
  orders_id   Int
  product_id Int

  order    orders   @relation(fields: [orders_id], references: [order_id], onDelete: Cascade)
  product  products @relation(fields: [product_id], references: [id], onDelete: Cascade)
  quantity Int
  price    Float
}
